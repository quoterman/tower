!!!
%html{:lang => "ru"}
  %head
    %meta{:charset => "utf-8"}

    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}

    %title= content_for?(:title) ? yield(:title) : "#{t('layouts.web.title')}"
    = favicon_link_tag 'favicon.ico'
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tag

    %body{class: ("page-root" if current_page?(root_path))}
      %header.page-header
      = yield

      = javascript_include_tag "application"
      = render 'partials/metrika/yandex'